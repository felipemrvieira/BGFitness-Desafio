 <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Por favor, fa√ßa login!</h3>
                    </div>
                    <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= devise_error_messages! %>
                            <fieldset>
                                <div class="form-group">
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail" %>
                                </div>
                                <div class="form-group">  
                                  <% if @minimum_password_length %>
                                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                                  <% end %><br />
                                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha" %>
                                </div>
                                <div class="form-group">
                                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" ,placeholder: "Repetir senha"%>
                                </div>
                                <%= f.submit "Cadastrar", class: "btn btn-lg btn-success btn-block" %>
                                <%= render "admins/shared/links" %>
                            </fieldset>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
